<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:theme="@style/ThemeOverlay.RamadanCalendar.AppWidgetContainer"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/item_margin_right"
                android:layout_toRightOf="@+id/no_layout"
                android:gravity="center"
                android:minWidth="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day"
                    style="@style/TimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/item_text" />

                <TextView
                    android:id="@+id/date"
                    style="@style/TimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_sans_bold"
                    android:text="12 April"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/item_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/last_sahr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/itmam_layout"
                android:layout_toRightOf="@+id/date_layout"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/TimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_sahr"
                    android:textColor="#fff"
                    android:textSize="@dimen/item_text" />

                <TextView
                    android:id="@+id/sahr"
                    style="@style/TimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_sans_bold"
                    android:text="04:28 AM"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/item_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itmam_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/item_margin_right"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/TimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/itmam"
                    android:textColor="#fff"
                    android:textSize="@dimen/item_text" />

                <TextView
                    android:id="@+id/itmam"
                    style="@style/TimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_sans_bold"
                    android:text="07:30 PM"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/item_text" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>