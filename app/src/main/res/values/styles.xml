<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TimeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TimeCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="cardBackgroundColor">@color/card_background_color</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- color of the menu overflow icon -->
        <!--        <item name="android:textColorSecondary">@color/white</item>-->
    </style>

    <style name="NavigationView" >
        <item name="fontFamily">@font/pt_sans_bold</item>
        <item name="android:listDivider">@color/colorSelected</item>
        <item name="android:textColorSecondary">@color/colorSelected</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="CreditsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_18</item>
    </style>

    <style name="ArabicFontStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pt_sans_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_20</item>
    </style>

    <style name="BanglaFontStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sutonny_mj</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="AyatCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="cardBackgroundColor">@color/card_background_color</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>
</resources>
